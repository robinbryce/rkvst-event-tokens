{
  "name": "rkvst-event-tokens",
  "type": "module",
  "version": "0.0.10",
  "description": "Mint ERC1155 NFT's for RKVST event receipts on any evm compatible chain",
  "main": "dist/index.js",
  "types": "dist/types",
  "files": [
    "README.md",
    "LICENSE.md",
    "SECURITY.md",
    "dist/*.js",
    "dist/types/*.d.ts",
    "dist/types/contracts/**/*.d.ts",
    "dist/types/factories/contracts/**/*.d.ts",
    "dist/types/factories/index.d.ts",
    "abi/**/*.json",
    "contracts"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./abi/*.json": "./abi/*.json"
  },
  "typesVersions": {
    ">4.0": {
      ".": [
        "./dist/types/*.d.ts"
      ]
    }
  },
  "directories": {
    "contracts": "contracts",
    "abi": "abi"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "author": "Robin Bryce <robin.bryce@rkvst.com",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-foundry": "^1.0.1",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@polysensus/diamond-deploy": "^0.1.13",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@solidstate/contracts": "^0.0.54",
    "chai": "^4.3.7",
    "chai-ethers": "^0.0.1",
    "dotenv": "^16.0.3",
    "hardhat-deploy": "^0.11.26",
    "husky": "^8.0.3",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "rollup": "^3.20.2",
    "solidity-rlp": "^2.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
